{
	"name": "contivModel",
	"objects": [
		{
			"name": "rule",
			"type": "object",
			"key": [ "tenantName", "policyName", "ruleId" ],
			"properties": {
				"ruleId": {
					"type": "string",
					"title": "Rule Name",
					"length": 64
				},
				"policyName": {
					"type": "string",
					"title": "Policy Name",
					"length": 64
				},
				"tenantName": {
					"type": "string",
					"title": "Tenant Name",
					"length": 64
				},
				"direction": {
					"type": "string",
					"format": "^(in|out|both)$"
				},
				"priority": {
					"type": "int",
					"min": 1,
					"max": 100,
					"default": "1"
				},
				"endpointGroup": {
					"type": "string",
					"length": 64
				},
				"network": {
					"type": "string",
					"length": 64
				},
				"ipAddress": {
					"type": "string"
				},
				"protocol": {
					"type": "string",
					"format": "^(tcp|udp|icmp||[0-9]{1,3}?)$"
				},
				"port": {
					"type": "int",
					"max": 65535
				},
				"action": {
					"type": "string",
					"format": "^(accept|deny)$"
				}
			},
			"link-sets": {
				"policies": {
					"ref": "policy"
				}
			}
		}
	]
}
